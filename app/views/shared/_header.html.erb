<div id="top-navbar-container">
  <div id="top-navbar">
    <ul>
      <li><a href='https://library.stanford.edu/myaccount'>My Account</a></li>
      <li>
        <%= link_to main_app.feedback_path, data: { toggle: 'collapse', target: '#feedback-form'}, 'aria-expanded' => 'false', 'aria-controls' => 'feedback-form' do %>
          Feedback
        <% end %>
      </li>
    </ul>
  </div>
</div>
<div id="feedback-form" class='collapse'>
  <%= render 'shared/feedback_forms/form' if show_feedback_form? %>
</div>
<div id="masthead-container">
  <div id="masthead">
    <%= link_to root_path do %>
      <%= image_tag 'sul_banner_white.svg', class: 'masthead-logo', alt: 'Stanford Libraries' %>
    <% end %>
  </div>
</div>
<div id="subnavbar-container">
  <div id="subnavbar">
    <ul class="nav navbar-nav navbar-left" role="navigation">
      <li class="dropdown search-subnavbar-about">
        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
          Library services<span class="caret"/>
        </a>
        <%= render :partial => '/shared/services_menu' %>
      </li>
    </ul>
  </div>
</div>
